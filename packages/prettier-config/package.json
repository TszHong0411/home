{
  "name": "@tszhong0411/prettier-config",
  "version": "0.0.10",
  "author": "tszhong0411 <me@honghong.me> (https://github.com/tszhong0411/)",
  "type": "module",
  "description": "The prettier config for tszhong0411's projects",
  "homepage": "https://github.com/tszhong0411/honghong.me#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tszhong0411/honghong.me.git"
  },
  "bugs": {
    "url": "https://github.com/tszhong0411/honghong.me/issues"
  },
  "license": "GPL-3.0",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo dist",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{cjs,mjs,js,jsx,cts,mts,ts,tsx,json}": "eslint --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "prettier-plugin-pkgsort": "^0.2.1",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-sort-json": "^4.0.0",
    "prettier-plugin-tailwindcss": "^0.6.9"
  },
  "devDependencies": {
    "@tszhong0411/eslint-config": "workspace:*"
  },
  "peerDependencies": {
    "prettier": "3.x"
  }
}
