{
  "private": true,
  "name": "honghong.me",
  "version": "0.0.0",
  "description": "My personal website and blog built with TypeScript, Next.js, and Tailwind CSS",
  "license": "AGPL-3.0-only",
  "author": "tszhong0411 <me@honghong.me> (https://github.com/tszhong0411/)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tszhong0411/honghong.me.git"
  },
  "type": "module",
  "scripts": {
    "build": "next build",
    "check-updates": "npx npm-check-updates --interactive --format group",
    "dev": "concurrently \"contentlayer dev\" \"cross-env NODE_OPTIONS='--inspect' next dev\"",
    "format": "prettier -w .",
    "preinstall": "npx only-allow yarn",
    "postinstall": "prisma generate && contentlayer build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install",
    "start": "next start",
    "test:coverage": "vitest --coverage --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:unit": "vitest run",
    "test:unit:ui": "vitest --ui",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@giscus/react": "^2.3.0",
    "@octokit/rest": "^20.0.1",
    "@prisma/client": "^5.3.1",
    "@radix-ui/react-alert-dialog": "^1.0.4",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-avatar": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-scroll-area": "^1.0.4",
    "@radix-ui/react-slot": "^1.0.2",
    "@t3-oss/env-nextjs": "^0.6.1",
    "@tabler/icons-react": "^2.35.0",
    "@types/hast": "^3.0.1",
    "canvas-confetti": "^1.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^0.2.0",
    "contentlayer": "^0.3.4",
    "dayjs": "^1.11.10",
    "framer-motion": "^10.16.4",
    "github-slugger": "^2.0.0",
    "hastscript": "^8.0.0",
    "marked": "^9.0.3",
    "next": "^13.5.2",
    "next-auth": "4.22.5",
    "next-contentlayer": "^0.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-medium-image-zoom": "^5.1.8",
    "react-use": "^17.4.0",
    "rehype-autolink-headings": "^7.0.0",
    "rehype-pretty-code": "^0.10.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2",
    "sharp": "^0.32.6",
    "shiki": "^0.14.4",
    "swr": "^2.2.2",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "unist-util-visit": "^5.0.0",
    "use-debounce": "^9.0.4",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@octokit/types": "^11.1.0",
    "@playwright/test": "^1.38.1",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@tszhong0411/eslint-config": "^1.0.28",
    "@tszhong0411/prettier-config": "^1.0.7",
    "@tszhong0411/tsconfig": "^1.0.3",
    "@types/canvas-confetti": "^1.6.1",
    "@types/mdx": "^2.0.7",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "@types/rss": "^0.0.30",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-v8": "^0.34.5",
    "@vitest/ui": "^0.34.5",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-next": "^13.5.2",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-playwright": "^0.16.0",
    "eslint-plugin-testing-library": "^6.0.2",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^14.0.1",
    "msw": "^1.3.1",
    "postcss": "^8.4.30",
    "prettier": "^3.0.3",
    "prisma": "^5.3.1",
    "schema-dts": "^1.1.2",
    "tailwindcss": "^3.3.3",
    "typescript": "5.2.2",
    "vitest": "^0.34.5"
  },
  "engines": {
    "node": ">= 16.9.0"
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "next/core-web-vitals",
      "@tszhong0411/eslint-config",
      "plugin:jsdoc/recommended-typescript-error"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": "latest"
    },
    "overrides": [
      {
        "files": [
          "./src/tests/!(e2e)/**/*.test.{ts,tsx}"
        ],
        "extends": [
          "plugin:testing-library/react"
        ],
        "plugins": [
          "testing-library"
        ]
      },
      {
        "files": [
          "./src/tests/e2e/**/*.test.{ts,tsx}"
        ],
        "extends": [
          "plugin:playwright/recommended"
        ]
      }
    ],
    "rules": {
      "require-jsdoc": 0,
      "valid-jsdoc": 0,
      "jsdoc/require-jsdoc": [
        2,
        {
          "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
          },
          "contexts": [
            "TSInterfaceDeclaration",
            "TSTypeAliasDeclaration",
            "TSEnumDeclaration",
            "TSPropertySignature"
          ]
        }
      ],
      "jsdoc/require-param": [
        0,
        {
          "checkRestProperty": false
        }
      ],
      "jsdoc/require-returns": 0,
      "jsdoc/require-param-type": 0,
      "jsdoc/require-returns-type": 0,
      "jsdoc/require-description-complete-sentence": 2,
      "jsdoc/require-hyphen-before-param-description": 2,
      "jsdoc/sort-tags": 2
    },
    "settings": {
      "jsdoc": {
        "mode": "typescript"
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx}": [
      "eslint"
    ],
    "*.{json,css,md,mdx,js,jsx,ts,tsx,cjs,mjs}": [
      "prettier -c"
    ]
  },
  "packageManager": "yarn@3.6.3",
  "prettier": "@tszhong0411/prettier-config"
}