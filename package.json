{
  "private": true,
  "name": "honghong-me-monorepo",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:blog": "turbo --filter=blog build",
    "check": "turbo format:check && turbo lint && turbo type-check",
    "check-updates": "pnpm dlx npm-check-updates --interactive --format group",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "dev:blog": "turbo dev --filter=blog",
    "dev:emails": "turbo dev --filter=emails",
    "dev:links": "turbo dev --filter=links",
    "format:check": "turbo format:check",
    "format:write": "turbo format:write",
    "preinstall": "npx only-allow pnpm",
    "knip": "knip",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "prepare": "husky",
    "type-check": "turbo type-check"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@tszhong0411/prettier-config": "workspace:*",
    "husky": "^9.0.11",
    "knip": "^5.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "turbo": "^1.12.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.1",
  "prettier": "@tszhong0411/prettier-config"
}